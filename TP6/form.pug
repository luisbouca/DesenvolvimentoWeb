extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue
                h3 Registo de Tarefa
            .w3-container.w3.w3-margin
                a(href='/lista').w3-button.w3-black voltar para a lista
                form.w3-container(action='/processaForm' method='POST').w3-border
                    label
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey.w3-margin(type='text' name='descricao')
                    label
                        b Data Limite(dd/mm/yyyy)
                    input.w3-input.w3-border.w3-light-grey.w3-margin(type='text' name='prazo')
                    label
                        b Tipo
                    select(name="tipo").w3-select.w3-margin
                        option(value="academico") Academico
                        option(value="profisional") Profisional
                        option(value="pessoal") Pessoal
                    label
                        b Urgência
                    select(name="prioridade").w3-select.w3-margin
                        option(value="alta") Alta
                        option(value="media") Media
                        option(value="baixa") Baixa
                    input.w3-btn.w3-blue-grey(type='submit' value='Submit').w3-margin
            footer.w3-container.w3-light-grey
                address Gerado por PubsApp