extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue
                h3 Lista de Ficheiros No Servidor
            .w3-container.w3-light-grey
                a(href='/').w3-button.w3-black Adicionar ficheiro
                table.w3-table-all
                    tr.w3-grey
                        th Ficheiro
                        th Descrição
                        th(colspan = '3') Ações
                        each item, index in lista
                            tr
                                td= item.name
                                td= item.desc
                                if !item.hidden
                                    td
                                        a(href=item.path,target="_blank").w3-button.w3-black Abrir Ficheiro
                                    td
                                        a(href='/Ficheiro/'+index).w3-button.w3-black Ver Detalhes
                                    td
                                        a(href='/Hide/'+index).w3-button.w3-black Remover
                                else
                                    td(colspan='2')
                                        a(href='/Ficheiro/'+index).w3-button.w3-black Ver Detalhes
            footer.w3-container.w3-light-grey
                address Gerado por PubsApp