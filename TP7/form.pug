extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue
                h3 Upload de um ficheiro
            .w3-container.w3-margin
                a(href='/ficheiros').w3-button.w3-black voltar para a lista
                form.w3-container.w3-border(action='/processaForm' method='POST' enctype='multipart/form-data')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey.w3-margin(type='text' name='name')
                    label
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey.w3-margin(type='text' name='desc')
                    label
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey.w3-margin(type='file' name='ficheiro')
                    input.w3-btn.w3-blue-grey.w3-margin(type='submit' value='Submit')
                
            footer.w3-container.w3-light-grey
                address Gerado por PubsApp